{
  "name": "logux-client",
  "version": "0.1.0",
  "description": "Low-level Logux client for web browser",
  "keywords": [
    "logux",
    "client"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/logux-client",
  "dependencies": {
    "logux-core": "^0.1.0",
    "logux-sync": "^0.1.0",
    "shortid": "^2.2.6"
  },
  "devDependencies": {
    "docdash": "^0.4.0",
    "eslint": "^3.12.0",
    "eslint-config-logux": "^3.0.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "fake-indexeddb": "^1.0.8",
    "jest": "^17.0.3",
    "jsdoc": "^3.4.3",
    "json-loader": "^0.5.4",
    "lint-staged": "^3.2.1",
    "mock-local-storage": "^1.0.2",
    "pre-commit": "^1.2.1",
    "rimraf": "^2.5.4",
    "webpack": "^2.1.0-beta.27",
    "webpack-bundle-analyzer": "^2.1.1",
    "yaspeller": "^3.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yarn run cleandocs && yaspeller *.md docs/*.html",
    "cleandocs": "yarn run docs && rimraf docs/*.js.html",
    "clean": "rimraf docs/ coverage/ bundle-report.html",
    "lint": "eslint *.js test/*.js",
    "docs": "jsdoc --configure .jsdocrc *.js",
    "test": "jest --coverage && yarn run lint && yarn run spellcheck",
    "pack": "webpack client.js all.js",
    "compress": "gzip -9 -f all.js",
    "show": "ls -lh *.gz | awk '{print \"Size:\", $5\"B\"}'",
    "size": "yarn run pack && yarn run compress && yarn run show && rm *.gz"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-logux"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
